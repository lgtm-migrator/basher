{
  "name": "basher",
  "version": "0.2.1",
  "description": "Cross Platform Easy CLI Automation",
  "main": "dist/index.js",
  "author": "Seonglae cho",
  "license": "MIT",
  "scripts": {
    "build": "rm -rf ./dist && tsc",
    "bin": "yarn build && node dist/bin/index.js",
    "compile": "yarn pkg",
    "pkg": "yarn build && rm -rf build && pkg package.json --out-path build "
  },
  "pkg": {
    "targets": [
      "win",
      "linux",
      "macos"
    ]
  },
  "os": [
    "linux",
    "win32",
    "macos"
  ],
  "bin": {
    "basher": "dist/bin/index.js"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "chalk": "^4.1.0",
    "commander": "7.1.0",
    "consola": "^2.15.3",
    "fs-extra": "^9.1.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/node": "14.14.31",
    "pkg": "^4.4.9",
    "typescript": "4.1.5"
  }
}